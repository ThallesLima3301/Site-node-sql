<body>

    <img id="imagem" src="/img/logo-ansiedade.png">
    <h1 id="título"><a class="inicio" href="/">Ínicio</a>
        <a class="inicio" href="atendimento.ejs">Atendimento</a>
        <a class="inicio" href="sobrenos.ejs">Sobre Nós</a> </h1>

    <section>

        <header>
            <center>
                <h1 class="senha">Esqueceu a Senha</h1>
            </center>
        </header>

        <form action="new_pswd" method="POST">
            <fieldset>

                <legend>Digite seus dados abaixo</legend>
                <center>

                    <label for="email">E-mail:</label>
                    <input type="email" name="email" id="email"> <br><br>

                    <label for="telefone">Telefone:</label>
                    <input type="tel" name="telefone" id="telefone"> <br><br>

                    <label for="novasenha">Nova Senha:</label>
                    <input type="password" name="novasenha" id="novasenha"> <br><br>

                    <button type="submit">Trocar Nova Senha</button>

                </center>
            </fieldset>
        </form>
    </section>
